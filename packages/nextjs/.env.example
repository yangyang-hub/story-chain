# Pinata JWT for IPFS pinning service
# Get your JWT from https://app.pinata.cloud/keys
NEXT_PUBLIC_PINATA_JWT=""

# Optional: Your personal Pinata gateway
# Example: https://my-gateway.mypinata.cloud
PINATA_GATEWAY=""
NEXT_PUBLIC_ALCHEMY_API_KEY=
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=


# PostgreSQL Database Configuration
# Replace with your PostgreSQL connection details
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=story_chain
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=5000

# SSL Configuration for PostgreSQL
# Set to "true" to enable SSL with rejectUnauthorized: false (for self-signed certs)
# Set to "false" to disable SSL completely
# Set DATABASE_SSL_REQUIRE to "true" for strict SSL with certificate validation
DATABASE_SSL=true
# DATABASE_SSL_REQUIRE=false

# 内部API密钥（用于保护API端点）
INTERNAL_API_KEY="your-secure-api-key-here"
NEXT_PUBLIC_INTERNAL_API_KEY="your-secure-api-key-here"

# 链上监控配置
MONITORING_INTERVAL_MS=30000
# 监控的块数范围
BLOCKS_RANGE=1000
# 是否自动启动监控（开发环境可设为false）
AUTO_START_MONITOR=true
